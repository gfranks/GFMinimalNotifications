<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GFMinimalNotificationLayout">
        <attr name="android:maxWidth" />
        <attr name="elevation" />
        <attr name="gf_notification_maxActionInlineWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GFMinimalNotificationTheme">
        <attr name="gf_notification_type_default" format="color" />
        <attr name="gf_notification_type_error" format="color" />
        <attr name="gf_notification_type_warning" format="color" />
        <attr name="gf_notification_textAppearance" format="reference" />
        <attr name="gf_notification_maxLines" format="integer|reference" />
        <attr name="gf_notification_direction" format="enum">
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>
</resources>